// ===== Stateless Operand Load Actions =====
{% for f in range(1, GEN_NUM_ACTIVE_FEATURES + 1) %}
action stateless_operand_load_iat_f{{ f }}() {
    ig_md.f{{ f }} = hdr.features.iat;
}
action stateless_operand_load_pkt_len_f{{ f }}() {
    ig_md.f{{ f }} = hdr.features.pkt_len;
}
action stateless_operand_load_hdr_len_f{{ f }}() {
    ig_md.f{{ f }} = hdr.features.hdr_len;
}
action stateless_operand_load_count_f{{ f }}() {
    ig_md.f{{ f }} = 1;
}
action stateless_operand_load_flow_duration_f{{ f }}() {
    ig_md.f{{ f }} = hdr.features.flow_duration;
}
action stateless_operand_load_dst_port_f{{ f }}() {
    ig_md.f{{ f }} = hdr.features.dst_port;
}
{% endfor %}
